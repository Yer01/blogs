{{/* templates/home.tmpl - homepage content block */}}
{{define "content"}}
<section class="hero">
  <div class="hero-left">
    <h1>Welcome to MyBlog</h1>
    <p class="lead">A tiny blog platform to test handlers, DB and templates.</p>
    <p><a class="btn" href="/blogs/create">Create Post</a></p>
  </div>

  <aside class="hero-right card highlight">
    <h3>Quick stats</h3>
    <p><strong>{{if .TotalPosts}}{{.TotalPosts}}{{else}}0{{end}}</strong> posts</p>
  </aside>
</section>

<section class="latest">
  <h2>Latest posts</h2>

  {{if .Blogs}}
    <ul class="post-list">
      {{range .Blogs}}
      <li class="post-card">
        <a class="post-link" href="/blogs/{{.ID}}">
          <div class="post-meta">
            <h3 class="post-title">{{.Name}}</h3>
            <time datetime="{{.Created.Format "2006-01-02"}}">{{.Created.Format "Jan 02, 2006"}}</time>
          </div>
          <p class="post-excerpt">{{.Content}}</p>
        </a>
        <div class="post-footer">
          <span class="updated">Updated: {{.Updated.Format "Jan 02, 2006 15:04"}}</span>
        </div>
      </li>
      {{end}}
    </ul>
  {{else}}
    <p>No posts yet â€” <a href="/blogs/create">create the first post</a>.</p>
  {{end}}
</section>
{{end}}
