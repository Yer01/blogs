{{/* templates/edit.tmpl - edit existing blog post form */}}
{{define "content"}}
<section class="edit-post">
  <div class="form-container">
    <h2>Edit Blog Post</h2>
    
    <form method="post" action="/blogs/{{.Blog.ID}}/edit" class="post-form">
      <div class="form-group">
        <label for="name">Post Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          value="{{.Blog.Name}}"
          placeholder="Enter a catchy title for your post" 
          disabled
          maxlength="200"
          aria-label="Blog post name"
        >
        <small class="form-hint">Post name cannot be changed</small>
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        <textarea 
          id="content" 
          name="content" 
          rows="12" 
          placeholder="Write your blog content here..." 
          required
          aria-label="Blog post content"
        >{{.Blog.Content}}</textarea>
        <small class="form-hint">Update your thoughts, ideas, or stories</small>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn primary">Update Post</button>
        <a href="/blogs/{{.Blog.ID}}" class="btn secondary">Cancel</a>
      </div>
    </form>
  </div>
</section>

<style>
.edit-post {
  max-width: 800px;
  margin: 2rem auto;
}

.form-container {
  background: white;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.form-container h2 {
  margin-top: 0;
  margin-bottom: 1.5rem;
  color: #333;
}

.post-form .form-group {
  margin-bottom: 1.5rem;
}

.post-form label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: 600;
  color: #333;
}

.post-form input[type="text"],
.post-form textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 1rem;
  font-family: inherit;
  transition: border-color 0.2s;
}

.post-form input[type="text"]:disabled {
  background-color: #f5f5f5;
  cursor: not-allowed;
}

.post-form input[type="text"]:focus,
.post-form textarea:focus {
  outline: none;
  border-color: #4CAF50;
  box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
}

.post-form textarea {
  resize: vertical;
  min-height: 200px;
}

.form-hint {
  display: block;
  margin-top: 0.25rem;
  color: #666;
  font-size: 0.875rem;
}

.form-actions {
  display: flex;
  gap: 1rem;
  margin-top: 2rem;
}

.form-actions .btn {
  padding: 0.75rem 1.5rem;
  text-decoration: none;
  display: inline-block;
}
</style>
{{end}}
