{{/* templates/blogs.tmpl - list all posts */}}
{{define "content"}}
<section class="posts-header">
  <div class="row space-between">
    <h2>All posts</h2>
    <a class="btn" href="/blogs/create">Create New Post</a>
  </div>
</section>

{{if .Blogs}}
  <div class="grid">
    {{range .Blogs}}
      <article class="card post-card-grid">
        <div class="card-body">
          <a class="post-link" href="/blogs/{{.ID}}">
            <h3 class="post-title">{{.Name}}</h3>
            <p class="post-excerpt">{{.Content}}</p>
          </a>
          <div class="meta small muted">
            <time datetime="{{.Created.Format "2006-01-02"}}">{{.Created.Format "Jan 02, 2006"}}</time>
            {{if ne (.Created.Format "2006-01-02") (.Updated.Format "2006-01-02")}}
              â€¢ Updated: {{.Updated.Format "Jan 02, 2006"}}
            {{end}}
          </div>
          <div class="card-actions">
            <a class="link" href="/blogs/{{.ID}}">Read</a>
          </div>
        </div>
      </article>
    {{end}}
  </div>
{{else}}
  <p>No posts found. <a href="/blogs/create">Create the first one</a>.</p>
{{end}}
{{end}}
